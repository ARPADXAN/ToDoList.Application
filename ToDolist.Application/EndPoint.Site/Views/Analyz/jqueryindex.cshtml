
@{
    Layout = null;
}

    <!DOCTYPE html>
<html>
<head>
    <title>jChart - jQuery version</title>

    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <!-- Jquery -->
    <script
	  src="https://code.jquery.com/jquery-3.2.1.min.js"
	  integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
	  crossorigin="anonymous"></script>

    <!-- Main -->
    <script src="~/SiteTemplate/js/jquery.jchart.js" type="text/javascript"></script>
    <!-- /Main -->

    <link href="https://fonts.googleapis.com/css?family=Oswald:300,400,500&amp;subset=latin-ext" rel="stylesheet">

    <style type="text/css">
        html {
            font-size: 14px;
            margin: 0 auto;
        }

        body {
            position: relative;
            min-height: 100vh;
            margin: 0;
            overflow-x: hidden;

        }

        .element {
            margin-top: 200px;
            display: inline-block;
            width: 500px;
            height: 500px;
            vertical-align: top;
        }

        * {
            -webkit-box-sizing: border-box;
            -moz-box-sizing: border-box;
            box-sizing: border-box;
        }
    </style>
</head>
<body>

<div class="container">
    <div id="element1" class="element"></div>
    <h1>5000000000000000000</h1>
    <div id="element3" class="element"></div>
</div>

<script>
    let jchart1, jchart3 ;
