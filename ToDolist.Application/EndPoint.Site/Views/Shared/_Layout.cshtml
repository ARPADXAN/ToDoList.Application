
<!DOCTYPE html >
<html  dir="rtl" lang="fa">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"] | TODO وب اپلیکیشین </title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


    <link rel="stylesheet" href="~/SiteTemplate/css/style.css">
    <link href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css' rel='stylesheet'>
    <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="Asset/Css/style.css" />
    <link rel="stylesheet" href="https://unpkg.com/@@majidh1/jalalidatepicker/dist/jalalidatepicker.min.css">


    <title>Dashboard Sidebar Menu</title> 
</head >
<body dir="rtl" >
    @RenderBody()
    <nav class="sidebar close">
        <header>
            <div class="image-text">
                <span class="image">
                   <img src="~/SiteTemplate/img/ToDo-List-icon.png">

                </span>
                <div class="text logo-text">
                    <span class="name">ToDo</span>
                    <span class="profession" style="font-family: Vazir, sans-serif;"> ثبت وظایف شما</span>
                </div>


            </div>


            <i class='bx bx-chevron-right toggle'></i>
        </header>

        <div class="menu-bar">
            <div class="menu">

                <li class="search-box">
                    <i class='bx bx-search icon'></i>
                    <input style="font-family: Vazir, sans-serif;" type="text" placeholder="جستجو...">
                </li>

                <ul class="menu-links">
                    <li class="nav-link">
                        <a href="#">
                            <i class='bx bx-home-alt icon' ></i>
                            <span class="text nav-text" style="font-family: Vazir, sans-serif;" >وظایف</span>
                        </a>
                    </li>

                    <li class="nav-link">
                        <a href="#">
                            <i class='bx bx-task icon' ></i>
                            <span style="font-family: Vazir, sans-serif;"  class="text nav-text">ساخت وظیفه جدید </span>
                        </a>
                    </li>

                    <li class="nav-link">
                        <a href="#">
                            <i class='bx bx-bell icon'></i>
                            <span style="font-family: Vazir, sans-serif;" class="text nav-text">اعلان ها</span>
                        </a>
                    </li>

                    <li class="nav-link">
                        <a href="#">
                            <i class='bx bx-pie-chart-alt icon' ></i>
                            <span class="text nav-text">Analytics</span>
                        </a>
                    </li>

                    <li class="nav-link">
                        <a href="#">
                            <i class='bx bx-heart icon' ></i>
                            <span class="text nav-text">Likes</span>
                        </a>
                    </li>

                    <li class="nav-link">
                        <a href="#">
                            <i class='bx bx-wallet icon' ></i>
                            <span class="text nav-text">Wallets</span>
                        </a>
                    </li>

                </ul>
            </div>

            <div class="bottom-content">
                <li class="">
                    <a href="#">
                        <i class='bx bx-log-out icon' ></i>
                        <span class="text nav-text" style="font-family: Vazir, sans-serif;">خروج</span>
                    </a>
                </li>

                <li class="mode">
                    <div class="sun-moon">
                        <i class='bx bx-moon icon moon'></i>
                        <i class='bx bx-sun icon sun'></i>
                    </div>
                    <span class="mode-text text" style="font-family: Vazir, sans-serif;">شب</span>

                    <div class="toggle-switch">
                        <span class="switch"></span>
                    </div>
                </li>

            </div>
        </div>

    </nav>

    <section class="home">
        <div class="text">Dashboard Sidebar</div>
    </section>

    <script src="~/SiteTemplate/js/index.js"></script>
    <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
      <script src="Asset/Js/scriptindex.js"></script>

</body>
</html>    
