
<!DOCTYPE html >
<html  dir="rtl" lang="fa">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"] | TODO وب اپلیکیشین </title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/SiteTemplate/css/StyleIndex.css" />
    <link rel="stylesheet" href="https://unpkg.com/@@majidh1/jalalidatepicker/dist/jalalidatepicker.min.css">
    <link rel="stylesheet" href="~/SiteTemplate/css/style.css">
    <link href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css' rel='stylesheet'>
    <link href='https://unpkg.com/boxicons@2.1.1/css/boxicons.min.css' rel='stylesheet'>     
    <link href="~/sweetalert/sweetalert2.css" rel="stylesheet" />
    <link href="~/sweetalert/sweetalert2.min.css" rel="stylesheet" />
    <link href="~/waitme/waitme.min.css" rel="stylesheet" />


</head >
<body dir="rtl" >
    <div class="sidebar1">
         <nav class="sidebar close">
           
        <header>
            <div class="image-text">
                <span class="image">
                   <img src="~/SiteTemplate/img/ToDo-List-icon.png">

                </span>
                <div class="text logo-text">
                    <span class="name" style="font-family: 'Pacifico', cursive;">ToDo</span>
                    <span class="profession" > ثبت وظایف شما</span>
                </div>


            </div>


            <i class='bx bx-chevron-right toggle'></i>
        </header>

        <div class="menu-bar">
            <div class="menu">

                <li class="search-box" hidden>
                    <i class="bx bx-search icon"></i>
                    <input type="text" placeholder="جستجو...">
                </li>

                <ul class="menu-links">
                    <li class="nav-link">
                        <a href="/home">
                            <i class='bx bx-home-alt icon' ></i>
                            <span class="text nav-text"  >وظایف</span>
                        </a>
                    </li>

                    <li class="nav-link">
                        <a asp-controller="ToDo" asp-action="index">
                            <i class='bx bx-task icon' ></i>
                            <span   class="text nav-text">ساخت وظیفه جدید </span>
                        </a>
                    </li>

                    <li class="nav-link">
                        <a href="#">
                            <i class='bx bx-bell icon'></i>
                            <span class="text nav-text">اعلان ها</span>
                        </a>
                    </li>

                    <li class="nav-link">
                        <a  asp-controller="Analyz" asp-action="index">
                            <i  class='bx bx-pie-chart-alt icon' ></i>
                            <span  class="text nav-text">آنالیز</span>
                        </a>
                    </li>

                    <li class="nav-link">
                        <a href="#">
                            <i class='bx bx-heart icon' ></i>
                            <span class="text nav-text">Likes</span>
                        </a>
                    </li>

                    <li class="nav-link">
                        <a href="#">
                            <i class='bx bx-wallet icon' ></i>
                            <span class="text nav-text">Wallets</span>
                        </a>
                    </li>

                </ul>
            </div>

            <div class="bottom-content">
                <li class="">
                    <a asp-controller="Account" asp-action="Logout">
                        <i class='bx bx-log-out icon' ></i>
                        <span class="text nav-text" >خروج</span>
                    </a>
                </li>

                <li class="mode">
                    <div class="sun-moon">
                        <i class='bx bx-moon icon moon'></i>
                        <i class='bx bx-sun icon sun'></i>
                    </div>
                    <span class="mode-text text" >شب</span>

                    <div class="toggle-switch">
                        <span class="switch"></span>
                    </div>
                </li>

            </div>
        </div>

    </nav>
    </div>
   

    @RenderBody()

        <!--اسکریپت -->
          <script src="/SiteTemplate/js/ScriptIndex.js"></script> 
          <script src="~/SiteTemplate/js/main.js"></script>
          <script src="~/SiteTemplate/js/SideBar.js"></script>
          <script src="~/waitme/waitme.min.js"></script>
          <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
          <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
          <script src="~/lib/jquery-validation/dist/additional-methods.min.js"></script>
          <script src="~/lib/jquery-validation/dist/additional-methods.js"></script>
          <script src="~/lib/jquery-validation/dist/jquery.unobtrusive-ajax.js"></script>
          <script src="https://unpkg.com/boxicons@2.1.4/dist/boxicons.js"></script>
          <script type="text/javascript" src="https://unpkg.com/@@majidh1/jalalidatepicker/dist/jalalidatepicker.min.js"></script>       
          <script src="~/sweetalert/sweetalert2.all.js"></script>
          <script src="~/sweetalert/sweetalert2.all.min.js"></script>
          <script src="~/sweetalert/sweetalert2.js"></script>
          <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
         

<script>
        jalaliDatepicker.startWatch({
          minDate: "attr",
          maxDate: "attr",
          minTime: "attr",
          maxTime: "attr",
          persianDigits: true,
          changeMonthRotateYear: true,
          showTodayBtn: true,
          showEmptyBtn: true,
          topSpace: 10,
          bottomSpace: 30,
          dayRendering(opt,input){
              return {
                  isHollyDay:opt.day==1
              }
          }
        });

        document.getElementById("aaa").addEventListener("jdp:change", function (e) { console.log(e) });
        </script>

</body>
@RenderSection("Scripts", false)

</html>    
